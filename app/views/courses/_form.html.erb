<div class="container well">
  <%= form_for @course, html: {class: "form-horizontal"} do |f| %>
    <% if @course.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>
  
        <ul>
        <% @course.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="form-group">
      <%= f.label :Nome, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :"Horas/Aula", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :hours, class: "form-control"  %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :Descrição, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :desc, class: "form-control"  %>
      </div>
    </div>
    <div class="actions">
      <div class="form-group">
        <%= f.submit :Cadastrar, class: "btn btn-default col-sm-2 col-sm-offset-9" %>
      </div>
      
    </div>
  <% end %>
</div>
