<p id="notice"><%= notice %></p>

<h1>Listing grads</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Min</th>
      <th>Max</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grads.each do |grad| %>
      <tr>
        <td><%= grad.name %></td>
        <td><%= grad.min %></td>
        <td><%= grad.max %></td>
        <td><%= link_to 'Show', grad %></td>
        <td><%= link_to 'Edit', edit_grad_path(grad) %></td>
        <td><%= link_to 'Destroy', grad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

