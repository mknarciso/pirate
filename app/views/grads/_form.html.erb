<div class="container well">
  <%= form_for @grad, html: {class: "form-horizontal"} do |f| %>
    <% if @grad.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@grad.errors.count, "error") %> prohibited this grad from being saved:</h2>
  
        <ul>
        <% @grad.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="form-group">
      <%= f.label :Escola, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.collection_select :school_id, School.all, :id, :name, {:prompt => ' '}, {:class=>'form-control'} %>

      </div>
    </div>
  
    <div class="form-group">
      <%= f.label :Nome, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :"Duração Mínima (Semestres)", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :min, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :"Duração Máxima (Semestres)", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :max, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
        <%= f.label :course_ids, "Cursos", class: "col-sm-2 control-label"  %>
        <div class="col-sm-10">
          <%= f.collection_select :course_ids, Course.all, :id, :name, {include_blank: true}, {multiple: true, :class=>'chosen-select form-control'} %>
        </div>
    </div>
    <div class="actions">
      <div class="form-group">
        <%= f.submit :Salvar, class: "btn btn-default col-sm-2 col-sm-offset-9" %>
      </div>
      
    </div>
  <% end %>
</div>